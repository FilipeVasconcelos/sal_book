#!/bin/bash
echo "-------------------------------------------------------------------------"
echo Traitement du fichier $1
echo "-------------------------------------------------------------------------"
grep -n "%%" $1 | awk 'BEGIN{
                                            FS=":";sep_non=0
                                           } 
                                           {
                                              if (length($2) !=80) 
                                              {
                                                  sep_non+=1; 
                                                  print $1,$2,length($2) 
                                              }
                                           }
                                      END  {
                                            print "nombre de s√©parateurs != 80",sep_non;
                                           }
                                      '

echo "-------------------------------------------------------------------------"
bin/check_sep.py $1
echo 
